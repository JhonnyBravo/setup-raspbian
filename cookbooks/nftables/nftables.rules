define eth0_saddr=10.0.2.0/24
define eth0_daddr=10.0.2.15
define ssh_saddr=192.168.56.1
define ssh_daddr=192.168.56.103
define ssh_port=22

# filter table
add table ip filter

# policy 設定
add chain ip filter INPUT { type filter hook input priority 0; policy drop; }
add chain ip filter FORWARD { type filter hook forward priority 0; policy drop; }
add chain ip filter OUTPUT { type filter hook output priority 0; policy accept; }
add chain ip filter LOGGING

# loopback の通信を許可
add rule ip filter INPUT iifname "lo" counter accept

# ICMP
add rule ip filter INPUT ip saddr $eth0_saddr ip daddr $eth0_daddr icmp type echo-request counter accept
add rule ip filter INPUT ip saddr $eth0_saddr ip daddr $eth0_daddr icmp type echo-reply counter accept

# TCP
add rule ip filter INPUT ip protocol tcp ct state related,established  counter accept

# DNS
add rule ip filter INPUT ip daddr $eth0_daddr udp sport 53 counter accept

# NTP
add rule ip filter INPUT ip daddr $eth0_daddr udp sport 123 udp dport 123 counter accept
add rule ip filter INPUT ip daddr $eth0_daddr udp sport 123 udp dport 32768-60999 counter accept

# SSH
add rule ip filter INPUT ip saddr $ssh_saddr ip daddr $ssh_daddr tcp dport $ssh_port tcp flags & (fin|syn|rst|ack) == syn ct state new  counter accept

